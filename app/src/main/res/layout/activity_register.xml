<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/resgisterRootConstLayou"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUserProfilePhotos"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_loginregisterphoto"
            app:civ_border_color="#FF000000"
            app:civ_border_width="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPhoneSelectorRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:text="PHONE"
            android:textColor="@color/blackColor"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgUserProfilePhotos" />

        <TextView
            android:id="@+id/tvEmailSelectorRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:text="E-MAIL"
            android:textColor="@color/blackColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPhoneSelectorRegister" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/customPalet"
            app:layout_constraintEnd_toEndOf="@+id/tvEmailSelectorRegister"
            app:layout_constraintStart_toStartOf="@+id/tvPhoneSelectorRegister"
            app:layout_constraintTop_toBottomOf="@+id/tvPhoneSelectorRegister" />

        <View
            android:id="@+id/phoneWiewBlack"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="79dp"
            android:background="@color/blackColor"
            app:layout_constraintEnd_toEndOf="@+id/imgUserProfilePhotos"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvPhoneSelectorRegister"
            app:layout_constraintTop_toBottomOf="@+id/tvPhoneSelectorRegister" />

        <View
            android:id="@+id/emailWiewBlack"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="79dp"
            android:layout_marginTop="8dp"
            android:background="@color/blackColor"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/tvEmailSelectorRegister"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imgUserProfilePhotos"
            app:layout_constraintTop_toBottomOf="@+id/tvPhoneSelectorRegister" />

        <EditText
            android:id="@+id/etRegisterInputType"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/edit_text_custom_design"
            android:ems="10"
            android:hint="Phone +994500000000"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="@+id/tvEmailSelectorRegister"
            app:layout_constraintStart_toStartOf="@+id/tvPhoneSelectorRegister"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <Button
            android:id="@+id/btnRegisterNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/edit_profile_button_background"
            android:textColor="@color/instaSearchClear"
            android:enabled="false"
            android:text="Next"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/etRegisterInputType"
            app:layout_constraintStart_toStartOf="@+id/etRegisterInputType"
            app:layout_constraintTop_toBottomOf="@+id/etRegisterInputType" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="50dp"
            android:background="@color/customPalet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:text="Are you have a account ? :"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/tvLoginSendFragPhone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Login"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/registerFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>